<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.enrique.audiolibros.ActividadPrincipal"
    tools:showIn="@layout/activity_main">
    <fragment android:id="@+id/selector_fragment"
        android:name="com.enrique.audiolibros.fragmentos.SelectorFragment"
        android:layout_width="0dp" android:layout_height="match_parent"
        android:layout_weight="1" />
    <fragment
        android:id="@+id/detalle_fragment"
        android:name="com.enrique.audiolibros.fragmentos.DetalleFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</LinearLayout>